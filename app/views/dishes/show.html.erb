<div class="banner-bait color-brown" >
  <div class="container">
    <div class="row">
      <div class="col-6">
        <h1><strong><%=  @dish.name.capitalize %></strong></h1>
        <%= cl_image_tag @dish.image.key, width: 200, height: 150, crop: :fit, class: "ml-0" %>
      </div>
      <div class="col-6 text-white">
        <div class="vertical-scroll h-50">
          <h2 >Description</h2>
          <hr>
          <p class="pt-3" > <%= @dish.description %></p>
        </div>
        <div class=" h-50">
          <h2>precio</h2>
          <hr>
          <p class="pt-3"> <%= @dish.cost %> soles</p>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="container pt-4">
  <div class="d-flex justify-content-between mb-2">
    <h3 style="margin-top: 1px;">Ingredients</h3>
    <%= link_to "add a ingredient",new_dish_dish_ingredient_path(@dish), class: "btn btn-primary" %>
  </div>
  <hr>
  <div class="d-flex ">
    <%= render 'shared/vertical_scrollbar' , :array => @dish.ingredients, vh:"vh-40"  %>
  </div>

</div>

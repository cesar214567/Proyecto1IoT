<%= link_to restaurant_path(restaurant) do%>
<div class="info-card">
  <div class="info-card-image">
    <%= cl_image_tag restaurant.images.first.key %>
  </div>
  <div class="restaurant-info vertical-scroll">
    <h3><%=restaurant.name%></h3>
    <p><%= restaurant.description %></p>
  </div>
</div>
<% end %>

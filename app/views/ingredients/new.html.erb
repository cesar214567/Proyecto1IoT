
<div class="d-flex justify-content-center">
  <div class="col-4 bg-white mt-5 rounded pb-5">
    <h2 class="pt-3">Create a new Ingredient</h2>
    <%= simple_form_for [@ingredient] do |f| %>
      
      <%= f.input :name,class: "mb-3"%>
      <br>
      <%= f.input :image, class: "mt-3"%>

      <%= f.submit "Create Dish", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>
</div>
